  <body>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form id="msform">
                <!-- progressbar -->
                <ul id="progressbar">
                    <li class="active">Request A Ride </li>
                    <li>On Your Way</li>
                    <li>Arriving</li>
                </ul>
                <!-- fieldsets -->

                <fieldset>
                    <h2 class="fs-title">Request A Ride </h2>
                    <h3 class="fs-subtitle"> </h3>
                    <fieldset id="map"> </fieldset>
                      <br>

                    <input type="text" name="phone"  id="crn_lcl"  placeholder="Current Location"/>
                    <input type="text" name="phone" placeholder="Enter Phone for Confirmation"/>
                    <input type="button" name="next" class="next action-button" value="Request"/>

                </fieldset>
            </form>
            <!-- link to designify.me code snippets -->
            <div class="dme_link">

            </div>
            <!-- /.link to designify.me code snippets -->
